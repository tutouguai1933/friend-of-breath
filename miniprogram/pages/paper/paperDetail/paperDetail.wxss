.article .top_part .article_image_warp image {
  height: 200rpx;
}
.article .middle_part {
  width: 100%;
  height: 150rpx;
  display: flex;
  background-color: #FFFFE0;
  transform: translateY(-50rpx);
}
.article .middle_part .avatar_warp {
  flex: 1;
  text-align: center;
}
.article .middle_part .avatar_warp image {
  transform: translateY(-50%);
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
}
.article .middle_part .middle_info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.article .middle_part .middle_info .nickname {
  flex: 1;
  font-size: 40rpx;
  color: orange;
  margin: 0 auto;
}
.article .middle_part .middle_info .button_warp {
  flex: 1;
  display: flex;
}
.article .bottom_part {
  margin-bottom: 50rpx;
  transform: translateY(-50rpx);
  display: flex;
  flex-direction: column;
}
.article .bottom_part .title {
  font-size: 50rpx;
  margin: 0 auto 0 auto;
}
.article .bottom_part .content_warp {
  width: 90%;
  margin: 30rpx auto 30rpx auto;
  align-items: center;
}
.article .bottom_part .content_warp .content {
  font-size: 37rpx;
}
.article .bottom_part .time {
  font-style: italic;
  text-align: right;
}
